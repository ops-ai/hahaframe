@model HahaFrame.Web.Models.LoginModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}

<div class="sections">
    <h2 class="heading">&nbsp;</h2>
    <div class="clearfix"></div>

    <div class="row">

        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">

            <legend>Use a local account to log in.</legend>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "width:270px" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:270px" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label for="RememberMe">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                Remember Me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(true)
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input class="btn btn-primary backcolor" type="submit" value="Sign in" />
                    </div>
                </div>
            }
            <br>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
            <section class="social" id="socialLoginForm">
                <legend>Log in using another service</legend>
                @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>
</div>
